.auth
  display: flex
  height: 100vh
  position: relative
.auth-form-wrapper
  width: 450px
  padding: 15vh 85px 0
  box-sizing: border-box
  z-index: 3
.auth-step-form
  padding-top: 6vh
  input:nth-child(1)
    margin-bottom 7px
.auth-form-input
  display: block
  width: 100%
  box-sizing: border-box
  padding: 10px 10px
  font-size: 15px
  border: 1px solid #ddd
  &::placeholder
    color #c5c5d1
 .auth-form-submit-btn
   font-size: 12px
   width: 100%;
   padding: 12px;
   margin-top: 15px;
   background-color: #5fccff
   color: #fff
   border: none
.auth-info
  margin-top: 25px
  font-size 14px
  color: gray
  line-height 1.7
  padding-bottom 20px

.auth-right-image
  flex-grow: 1
  background-color: #5fcdff
  position: relative
.auth-image
  max-height: 100%;
  max-width: 100%;
  display: block;
  margin: auto;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
.auth-cloud
  position: absolute
  bottom: 0
  left: 0
  background: url("/img/cloud.png") no-repeat bottom
  background-size: contain
  background-position: left bottom
  width: 100%
  height: 25vh
  pointer-events: none
  z-index: -1
.auth-error
  color: red

.auth-btn-link,
.auth-btn-link-back
  display: flex
  margin-top: 12px;
  & > a
    text-decoration: none
    color: grey
    font-size: 12px;
    &:first-child
      margin-right: auto
      color: #000

.auth-btn-link-back a
  margin-left: auto

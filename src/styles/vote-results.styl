.vote-results
  padding: 0 20px

#vote-results-header-text
  color: #fff
  max-width: 1200px
  margin: 0 auto 20px

.result-item
  display: flex
  max-width: 1200px
  margin: auto
  background: #fff
  margin-bottom: 30px

.result-item-counter
  max-width: 1200px
  margin: auto
  background: #fff
  margin-bottom: 30px

.result-item-t
  margin-top: 0;
  margin-bottom: .5em;
  color: rgba(0, 0, 0, 0.85);
  font-weight: 500;
  padding: 10px 15px;
  font-size: 22px;
  border-bottom: 7px solid #f6f7fb;

.result-body
  width: 50%
  padding 25px 50px 25px 50px
  border-right: 1px solid #DCDCDC

.result-title
  h1
    font-size 22px

.result-answers
  color: #AEAFB3
  font-size: 16px
  margin-bottom: 15px
  margin-top: -15px

.result-question-row
  display: flex;
  margin-bottom: 12px;
  align-items: center;

.result-chart
  width: 50%
  display: flex
  align-items: center
  justify-content center

.result-chart-inner
  width: 100%
  max-width: 400px

.result-color
  width: 20px
  height: 20px
  display: inline-block
  border-radius: 50%
  flex-shrink: 0

.result-separator
  border: 1px solid #E6E6E6
  width: 100%
  margin-top: 20px
  margin-bottom: 20px

.result-text
  font-size: 18px
  margin-left: 15px
  color: #3D4146
